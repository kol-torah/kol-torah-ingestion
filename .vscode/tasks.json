{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pnpm: dev - admin/frontend",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "options": {
        "cwd": "${workspaceFolder:Admin Frontend}"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^ERROR in (.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "(Local:|ready in)"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
