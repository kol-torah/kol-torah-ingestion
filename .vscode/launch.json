{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Admin Backend: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "api.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "jinja": true,
      "justMyCode": false,
      "cwd": "${workspaceFolder:Admin Backend}",
      "python": "${workspaceFolder:Admin Backend}/env/Scripts/python.exe",
      "env": {
        "PYTHONPATH": "${workspaceFolder:Admin Backend}"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Admin Backend: Run Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder:Admin Backend}/run.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "${workspaceFolder:Admin Backend}/env/Scripts/python.exe",
      "cwd": "${workspaceFolder:Admin Backend}"
    },
    {
      "name": "Admin Frontend: Edge",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder:Admin Frontend}",
      "preLaunchTask": "pnpm: dev - admin/frontend"
    }
  ]
}
